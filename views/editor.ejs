<%- include('partials/header.ejs') %> 


<body onload="loadArticles()">
<div class="heading">
    <h1>Editor</h1>
</div>
<div>
<h4 class="theme">Choose the theme for the editor</h4>
<button class="button1">Puzzle</button>
<button class="button2">Article</button>
<button class="button3">Code</button>
</div>
<div class="lang">
   <h4>Choose the language to be used and the difficulty level</h4>
   <div class="dropdown">
    <button class="button4">Programming Language</button>
    <div class="dropdown-content">
    <p>C++</p>
    <p>Java</p>
    <p>Python</p>
    <p>C</p>
    </div>
  </div>
  <div class="dropdown">
    <button class="button5">Difficulty Level</button>
    <div class="dropdown-content">
    <p>Easy</p>
    <p>Medium</p>
    <p>Hard</p>
    </div>
  </div>
</div>
<div class="container">
    <!-- <textarea name="content"></textarea> -->
    <form action="/" method="POST">
        <div class="form-group">
          <label for="head">Blog Heading</label>
          <input type="text" name="heading" class="form-control" id="head">
          <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
        </div>
        <div class="form-group">
          <label for="Body">Blog Body</label>
          <textarea rows="5" name="blogbody" class="form-control" id="Body"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>

